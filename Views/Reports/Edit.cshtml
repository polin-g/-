@model person_money.Models.Report


<h4>Отчеты</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="form-group">              
                <input asp-for="IdClient" class ="form-control" value=@ViewBag.IdClient hidden/>
            </div>
            <div class="form-group">
                <label asp-for="IncomesRep" class="control-label"></label>
                <input asp-for="IncomesRep" class="form-control" />
                <span asp-validation-for="IncomesRep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WastesRep" class="control-label"></label>
                <input asp-for="WastesRep" class="form-control" />
                <span asp-validation-for="WastesRep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a class="btn btn-dark" asp-action="Index">Назад к списку</a>
</div>
